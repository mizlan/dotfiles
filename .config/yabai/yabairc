yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config window_border                on
yabai -m config window_border_width          3
yabai -m config active_window_border_color   0xbbfca9a9
yabai -m config normal_window_border_color   0x55555555
yabai -m config window_shadow                off

yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

yabai -m config layout                       bsp
yabai -m config top_padding                  30
yabai -m config bottom_padding               30
yabai -m config left_padding                 30
yabai -m config right_padding                30
yabai -m config window_gap                   30

yabai -m signal --add event=window_created action='/Users/ml/code/libra/libra c $YABAI_WINDOW_ID'
yabai -m signal --add event=window_destroyed action='/Users/ml/code/libra/libra r $YABAI_WINDOW_ID'

# Logic 2010
yabai -m rule --add app="^LogicProgram$" manage=off
