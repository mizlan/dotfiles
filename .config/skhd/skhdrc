cmd + shift - return : open -a Firefox
cmd + shift - e      : open -a kitty
cmd + shift - space  : open -a Emacs
cmd + shift - y      : open -a zoom.us
cmd + shift - o      : python3 '/Users/michaellan/scripts/zoom_helper/main.py'
cmd + shift - p      : janet '/Users/michaellan/scripts/zoom_helper/zelda.janet'

# messages leader
:: messages @
cmd + shift - m   ; messages
messages < m      : open -a Messenger
messages < d      : open -a Discord
messages < e      : open -a Element
messages < s      : open -a Slack
messages < escape ; default

