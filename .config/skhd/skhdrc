cmd + shift - return : open -a Brave\ Browser
cmd + shift - space  : open -a Alacritty
cmd + shift - y      : open -a zoom.us
cmd + shift - o      : python3 '/Users/michaellan/scripts/zoom_helper/main.py'

# messages leader
:: messages @
cmd + shift - m   ; messages
messages < m      : open -a Messenger
messages < d      : open -a Discord
messages < e      : open -a Element
messages < s      : open -a Slack
messages < escape ; default

# viewing leader
:: viewing @
cmd + shift - k  ; viewing
viewing < p      : open -a Preview
viewing < s      : open -a Skim
viewing < space  : screencapture -ic
viewing < escape ; default

# quick access websites leader
:: websites @
cmd + shift - g   ; websites
websites < c      : open -a Brave\ Browser 'https://classroom.google.com/u/1/'
websites < s      : open -a Brave\ Browser 'file:///Users/michaellan/hs/bell_schedule_20_21.pdf'
websites < y      : open -a Brave\ Browser 'https://youtube.com'
websites < escape ; default
